---
import { Image } from 'astro:assets'

interface Props {
  title: string
}
const { title } = Astro.props
---

<article class='bg-slate-800 rounded'>
  <Image
    class='rounded-t-lg'
    src={`http://fakeimg.pl/800x460?text=${title}&font=museo`}
    alt='Projecto 1'
    width='400'
    height='250'
    loading='lazy'
  />
  <footer class='p-2'>
    <h2>{title}</h2>
  </footer>
</article>
